{
  "name": "codeweaver",
  "version": "3.1.1",
  "main": "src/main.ts",
  "bin": {
    "codeweaver": "command.js"
  },
  "scripts": {
    "start": "nodemon -r tsconfig-paths/register src/main.ts",
    "dev": "nodemon -r tsconfig-paths/register src/main.ts",
    "build": "tsc && tsc-alias && copyfiles -u 1 \"src/**/*.{json,env,sqlite,db,sql,yaml,yml,xml,txt,md}\" dist",
    "serve": "cross-env TSCONFIG_PATH=tsconfig.paths.json node -r tsconfig-paths/register dist/main.js"
  },
  "keywords": [
    "framework",
    "lightweight",
    "node",
    "Express",
    "boilerplate",
    "utility",
    "decorator",
    "controller",
    "microframework"
  ],
  "author": "@js-code-crafter - Ehsan Afzali",
  "license": "MIT",
  "description": "An unopinionated microframework built with Express, TypeScript, Zod, Swagger",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-winston": "^4.2.0",
    "ioredis": "^5.8.2",
    "logform": "^2.7.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^3.7.0",
    "utils-decorators": "^2.10.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
